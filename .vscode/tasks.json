{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Profile Griptape Nodes App: CPU profiling - uses sudo (may be required for some systems such as Mac)",
            "type": "shell",
            "command": "sudo",
            "args": [
                ".venv/bin/austin",
                "-i", "100us",
                "-s",
                "-C",
                "-b",
                "-o", "profiles/profile_griptape_nodes_cpu.mojo",
                ".venv/bin/python",
                "-m", "src.griptape_nodes.__init__",
                "--no-update"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
